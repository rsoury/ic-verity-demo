# IC Verity Proxy Configuration
# Copy this file to .env and modify the values as needed

# Server port (default: 3000)
PORT=3000

# Server host (default: :: for IPv6; use 0.0.0.0 for IPv4-only)
HOST=::

# Node environment
NODE_ENV=development

# Logging level (silent, error, warn, info, debug)
LOG_LEVEL=info

# Timeout settings (in milliseconds)
TIMEOUT=30000
PROXY_TIMEOUT=30000

# Security settings
SECURE=false
CHANGE_ORIGIN=true

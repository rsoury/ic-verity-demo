{
  "name": "ic-verity-proxy",
  "version": "1.0.0",
  "description": "Transparent proxy server for IC Verity demo using Express.js and Bun",
  "main": "api/index.ts",
  "scripts": {
    "start": "bun run api/index.ts",
    "dev": "bun --watch api/index.ts",
    "build": "bun build api/index.ts --outdir dist --target bun"
  },
  "dependencies": {
    "@usherlabs/verity-client": "^0.0.24",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "proxy",
    "express",
    "bun",
    "internet-computer",
    "verity"
  ],
  "author": "IC Verity Demo",
  "license": "MIT"
}
